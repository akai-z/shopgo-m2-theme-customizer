<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="theme-customizer" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Theme Customizer</label>
            <tab>shopgo</tab>
            <resource>ShopGo_ThemeCustomizer::config_theme_customizer</resource>
            <group id="general" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Theme Customizer</label>
                <field id="theme" translate="label comment" type="select" sortOrder="0" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Theme</label>
                    <comment>Select a theme</comment>
                    <source_model>ShopGo\ThemeCustomizer\Model\System\Config\Source\Theme</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
